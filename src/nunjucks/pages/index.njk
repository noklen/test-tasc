{% extends "src/nunjucks/templates/indexTemplate.njk" %}
{% from "src/nunjucks/templates/components/models/carousel.njk" import winerCarousel, jackpot %}
{% from "src/nunjucks/templates/components/models/gameCard.njk" import gameCardContent %}
{% set title = "Casino" %}


{% block jackpot %}
    <div class="jackpot">
         <div class=" jackpot-container">
             <div class="winner-box">
                 <div class="jackpot-text">
                     last winners
                 </div>
                 {{ winerCarousel('winerCarousel') }}
             </div>
             <div class="jackpot-box">
                 <div class="jackpot-text-number">
                     jackpot
                 </div>
                 <div class="jackpot-content">
                     {{ jackpot('jackpot-number') }}
                 </div>
             </div>
         </div>
    </div>
    </div>
{% endblock %}

{% block games %}
    <div class="game-container">
            <div class="game-menu-box">
                <div class="filter-list">
                    <div class="game-cort">
                        <div class="filter-list-butt">
                            <a class="filter-list-text">
                                <img class="filter-img" src="images/POPULAR.png" alt="">
                                popular
                            </a>
                        </div>
                        <div class="filter-list-butt">
                            <a class="filter-list-text">
                                <img class="filter-img" src="images/NEW.png" alt="">
                                new
                            </a>
                        </div>
                        <div class="filter-list-butt">
                            <a class="filter-list-text">
                                <img class="filter-img" src="images/SLOTGAME.png" alt="">
                                slot games
                            </a>
                        </div>
                        <div class="filter-list-butt">
                            <a class="filter-list-text">
                                <img class="filter-img" src="images/CARDS.png" alt="">
                                card games
                            </a>
                        </div>
                        <div class="filter-list-butt">
                            <a class="filter-list-text">
                                <img class="filter-img" src="images/ROULETTE.png" alt="">
                                roulette
                            </a>
                        </div>
                    </div>
                    <div class="filter-group">
                        <div class="filter-sort">
                            <div class="filter-sort">sort by: </div>
                            <a href="" class="filter-sort"> popular</a>
                            <div class="filter-sort">|</div>
                            <a href="" class="filter-sort">A-Z</a>
                        </div>
                        <div class="input-group mb-3 search-filter">
                            <input type="text" class="form-control search-input" placeholder="Search form" aria-label="Search form" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                            <span class="input-group-text search-span" id="basic-addon2">
                                <img src="images/search.png" alt="">
                            </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="games-list ">
                    <div id="gameList" class="grid game-list-box">
                        {% for i in range(0, 7) %}
                            {{ gameCardContent(+i) }}
                            {% if loop.first %}
                                <div class="promotion-box">
                                    <div class="promotion-container">
                                        <div class="promotion">
                                            <div class="promotion-content">promotion</div>
                                        </div>
                                        <div class="swiper-container">
                                            <div class="swiper-wrapper">
                                                <div class="swiper-slide"><img class="img-game" src="images/sliderImage.png" alt="...">
                                                    <div class="carousel-caption">
                                                        <img src="images/sliderText.png" alt="">
                                                    </div>
                                                </div>
                                                <div class="swiper-slide"><img class="img-game" src="images/sliderImage.png" alt="...">
                                                    <div class="carousel-caption">
                                                        <img src="images/sliderText.png" alt="">
                                                    </div>
                                                </div>
                                                <div class="swiper-slide"><img class="img-game" src="images/sliderImage.png" alt="...">
                                                    <div class="carousel-caption">
                                                        <img src="images/sliderText.png" alt="">
                                                    </div>
                                                </div>
                                                <div class="swiper-slide"><img class="img-game" src="images/sliderImage.png" alt="...">
                                                    <div class="carousel-caption">
                                                        <img src="images/sliderText.png" alt="">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="swiper-pagination"></div>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="more-game-content">
                        <button class="more-game button-blu box-blu button-hover-blu">more games</button>
                    </div>
                </div>
            </div>
    </div>
{% endblock %}
