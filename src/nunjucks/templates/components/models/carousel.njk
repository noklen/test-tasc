    {
        url: 'images/ghotic.png',
        game: 'ghotic',
        count: '185.00$',
        playerName:'PlayerName'
    },
    {
        url: 'images/thrones.png',
        game: 'game of thrones',
        count: '185.00$',
        playerName:'PlayerName'
    },
    {
        url: 'images/robyn.png',
        game: 'robyn',
        count: '185.00$',
        playerName:'PlayerName'
    }
] %}

{% set jackpotList = [
    {
        place: 'images/GOLDEN.png',
        number: 'images/goldNumber.png'
    },
    {
        place: 'images/SILVER.png',
        number: 'images/silverNumber.png'
    },
    {
        place: 'images/BRONZE.png',
        number: 'images/bronzeNumber.png'
    }
] %}

{% set promotionList = [
    {
        img: 'images/sliderImage.png',
        text: 'images/sliderText.png'
    }
] %}

{%  macro winerCarousel (class) %}
    <div class="jackpot-number {{ class }}" id="slider_1">
            {% for items in winList %}
                <div class="win-card">
                    <div class="win-card-img">
                        <img class="jackpot-img" src="{{ items.url }}" alt="">
                    </div>
                    <div class="win-card-info">
                        <div class="win-game">{{ items.game }}</div>
                        <div class="win-value">{{ items.count }}</div>
                        <div class="win-name">{{ items.playerName }}</div>
                    </div>
                </div>
            {% endfor %}
    </div>
{% endmacro %}

{% macro jackpot (class) %}
    <div class="{{ class }}">
        {% for items in jackpotList %}
            <div class="jackpot-count">
                <div>
                    <img class="jackpot-img" src="{{ items.place }}" alt="">
                </div>
                <div>
                    <img class="jackpot-img" src="{{ items.number}}" alt="">
                </div>
            </div>
        {% endfor %}
    </div>
{% endmacro %}

{% macro gamePromotion(class) %}
    <div class="swiper-container" id="slider_2">
        <div class="swiper-wrapper">
            {% for i in range(0, 4) %}
                {% for item in promotionList %}
                    <div class="swiper-slide {{ class }}"><img class="img-game" src="{{ item.img }}" alt="...">
                        <div class="carousel-caption">
                            <img src="{{ item.text }}" alt="">
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}]
        </div>
        <div class="swiper-pagination"></div>
    </div>
{% endmacro %}
